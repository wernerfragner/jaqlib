<!-- ====================================================================== -->
<!-- Preconditions for using this build: -->
<!--   .) SVN must be installed: SVN: http://subclipse.tigris.org/svnant.html -->
<!--   .) SVN JavaHL must be installed: -->
<!--   .) the properties svnant.lib.dir, svn.username, and svn.password must 
          be set in a file called 'user.properties' -->
<!--   .) the java.library.path variable must contain the folder with the 
          SVN JavaHL native libraries. -->
<!-- ====================================================================== -->

<project name="JaqLib_PublishVersion" default="publish" basedir=".">
	
	<import file="build.xml" />
  
  
  <!-- ========================================= -->
  <!-- User specific properties -->
  <!-- ========================================= -->  
  
	<property file="./user.properties" />	
	
	
  <!-- ========================================= -->
	<!--   Set-Up of SVN-ANT classpath             -->
  <!-- ========================================= -->
	
	<path id="svnant.classpath">
	 <fileset dir="${svnant.lib.dir}">     
	  <include name="**/*.jar" />
	 </fileset>
	</path>

	<typedef resource="org/tigris/subversion/svnant/svnantlib.xml" classpathref="svnant.classpath" /> 
	
	
	<target name="subversion_tag" depends="deploy" >
	 <svn username="${svn.username}" password="${svn.password}" >
      <copy srcUrl="https://jaqlib.svn.sourceforge.net/svnroot/jaqlib/trunk" destUrl="https://jaqlib.svn.sourceforge.net/svnroot/jaqlib/tags/${version.fullString}" message="Tag for version ${version.fullString}" revision="HEAD" />
    </svn>
	</target>
		
		
  <target name="publish" depends="subversion_tag">
  </target>
	
</project>
