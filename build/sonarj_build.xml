<?xml version="1.0" encoding="UTF-8"?>
<project name="sonarj" default="sonarj-create-html-report"	basedir="..">


	<property name="version.sonar" value="4.0.0" />
	<property name="sonarj-base-dir" location="E:/programmieren/SonarJ" />
	<property name="license" location="${sonarj-base-dir}/SonarJ.license" />
	<property name="lib" location="${sonarj-base-dir}/eclipse/plugins/com.hello2morrow.sonarclipse_${version.sonar}" />
	<property name="target.report" location="${build.temp}/sonarj/reports" />
	<property name="src.html" location="${sonarj-base-dir}/html" />
	<property name="architecture-file" value="../../jaqlib.sonarj" />


	<target name="sonarj-create-html-report">
		<mkdir dir="${target.report}" />
		<taskdef classname="com.hello2morrow.sonar.report.java.SonarJAntTask" name="SonarJ">
			<classpath>
				<fileset dir="${lib}" includes="SonarJ-${version.sonar}.jar" />
				<fileset dir="${lib}/lib" includes="*.jar" />
			</classpath>
		</taskdef>
		<SonarJ license="${license}" file="${architecture-file}" dir="${target.report}" />
	</target>

</project>